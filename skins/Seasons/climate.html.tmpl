#errorCatcher Echo
#encoding UTF-8
<!DOCTYPE html>
<html lang="$lang">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Climate Records for $climate.station_id</title>
    <link rel="icon" type="image/png" href="favicon.ico" />
    <link rel="stylesheet" type="text/css" href="seasons.css"/>



    <script src="seasons.js"></script>
  </head>

  <body>
    #include "titlebar.inc"

<div class="widget_title">Climate Records</div>
<div style="display: flex; justify-content: space-between; align-items: flex-start; gap: 40px; margin-top: 20px;">

    <div style="flex: 1;">
        <table style="width: 100%; border-collapse: collapse;">
            <tr><td>Location</td><td><strong>$climate.name ($climate.station_id)</strong></td></tr>
            <tr><td>Latitude</td><td><strong>$climate.latitude</strong></td></tr>
            <tr><td>Longitude</td><td><strong>$climate.longitude</strong></td></tr>
            <tr><td>Altitude</td><td><strong>$climate.altitude</strong></td></tr>
        </table>
    </div>

    <div style="flex: 1;">
        <table style="width: 100%; border-collapse: collapse;">
            <tr><td>All-Time High</td><td><strong>$climate.day.outTemp.high.max</strong></td><td>($climate.day.outTemp.high.maxtime)</td></tr>
            <tr><td>Lowest High</td><td><strong>$climate.day.outTemp.high.min</strong></td><td>($climate.day.outTemp.high.mintime)</td></tr>
            <tr><td>Average High</td><td><strong>$climate.day.outTemp.avg</strong></td><td>&nbsp;</td></tr>
            <tr><td colspan="3"><hr></td></tr>
            <tr><td>All-Time Low</td><td><strong>$climate.day.outTemp.low.min</strong></td><td>($climate.day.outTemp.low.mintime)</td></tr>
            <tr><td>Highest Low</td><td><strong>$climate.day.outTemp.low.max</strong></td><td>($climate.day.outTemp.maxtime)</td></tr>
            <tr><td>Average Low</td><td><strong>$climate.day.outTemp.avg</strong></td><td>&nbsp;</td></tr>
        </table>
    </div>

</div>


    <p class="footnote">
      $gettext("This station is controlled by <a href='https://weewx.com'>WeeWX</a>, an experimental weather software system written in Python.")
    </p>

  </body>

</html>
